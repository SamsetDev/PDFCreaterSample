<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actvities.CreatePdfActivity">
    <include
        android:id="@+id/tool1"
        layout="@layout/toolbar" />
    <LinearLayout
        android:layout_below="@+id/tool1"
        android:id="@+id/write_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="visible">

        <EditText
            android:id="@+id/pdf_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:hint="Write your content"
            android:lineSpacingExtra="4dp"
            android:lines="8" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_genrate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Generate Pdf"></android.support.v7.widget.AppCompatButton>
    </LinearLayout>
</RelativeLayout>
